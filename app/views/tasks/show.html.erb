<div class="container">
  <div class="tasks-container">
    <div class="edit-header">
      <h1><%= @task.title %></h1>
      <%= link_to "✏️ Edit this task", edit_task_path(@task), class: 'btn btn-light' %>
    </div>

    <div class="alert alert-info">
      <%= @task.details %>
    </div>

    <div class="completed">
      <input type="checkbox" name="task" <%= @task.completed ? 'checked' : '' %>>
      <label for="task"><%= @task.completed ? 'This task is completed' : 'This task is not completed yet' %></label>
    </div>

    <%= link_to "Back to list", tasks_path, class: 'btn btn-secondary' %>
  </div>
</div>
